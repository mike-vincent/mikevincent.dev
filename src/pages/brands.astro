---

<Base title="Brands - Mike Vincent" description="Brands by Mike Vincent">
  {brandSections.map(section => (
    <section class="brand-section">
      <h2 class="brand-section-header">{section.header}</h2>
      <ul class="brands-list">
        {section.items.map(brand => (
          <li>
            {brand.url ? (
              <a href={brand.url} target="_blank" rel="noopener noreferrer">
                <span class="brand-name">{brand.name}</span>
                <span class="brand-desc">{brand.description}</span>
              </a>
            ) : (
              <span class="brand-link-none">
                <span class="brand-name">{brand.name}</span>
                <span class="brand-desc">{brand.description}</span>
              </span>
            )}
          </li>
        ))}
      </ul>
    </section>
  ))}
</Base>

<style>
  :global(.page-content):has(.brand-section) {
    padding-top: 0;
    padding-bottom: 0;
  }
  .brand-section {
    margin-bottom: 0;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    margin-left: -11px;
    margin-right: -11px;
    padding-left: 11px;
    padding-right: 11px;
  }
  .brand-section:first-child {
    border-top: none;
  }
  .brand-section-header {
    font-size: 12px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
    padding: 16px 8px 8px;
  }
  :global(.theme-dark) .brand-section-header { color: rgba(255, 255, 255, 0.5); }
  :global(.theme-light) .brand-section-header { color: rgba(0, 0, 0, 0.5); }
  .brands-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .brands-list li {
    border-bottom: 1px solid rgba(128, 128, 128, 0.15);
  }
  .brands-list li:last-child {
    border-bottom: none;
  }
  .brands-list a,
  .brands-list .brand-link-none {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 12px;
    padding: 14px 8px;
    text-decoration: none;
    min-height: 44px;
  }
  .brands-list a:hover {
    text-decoration: none;
  }
  :global(.theme-dark) .brands-list a:hover { background: rgba(255, 255, 255, 0.04); }
  :global(.theme-light) .brands-list a:hover { background: rgba(0, 0, 0, 0.02); }
  .brand-name {
    font-size: 16px;
    font-weight: 600;
    flex-shrink: 0;
  }
  :global(.theme-dark) .brand-name { color: #fff; }
  :global(.theme-light) .brand-name { color: #000; }
  .brand-desc {
    font-size: 14px;
    text-align: right;
  }
  :global(.theme-dark) .brand-desc { color: rgba(255, 255, 255, 0.4); }
  :global(.theme-light) .brand-desc { color: rgba(0, 0, 0, 0.4); }

  @media (max-width: 499px) {
    .brands-list a,
    .brands-list .brand-link-none {
      flex-direction: column;
      gap: 2px;
    }
    .brand-desc {
      text-align: left;
    }
  }
</style>
