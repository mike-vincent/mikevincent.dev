---
import Base from '../layouts/Base.astro';

const res = await fetch('https://raw.githubusercontent.com/mike-vincent/mike-vincent/main/README.md');
const md = await res.text();

// Parse markdown into sections (h2 + body pairs)
const sections: { heading: string; body: string }[] = [];
const blocks = md
  .replace(/^# .+\n+/, '')
  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '$1')
  .replace(/\*\*([^*]+)\*\*/g, '$1')
  .replace(/\n\n+/g, '\n\n')
  .split('\n\n')
  .map(b => b.trim())
  .filter(Boolean);

for (const block of blocks) {
  if (block.startsWith('## ')) {
    sections.push({ heading: block.slice(3), body: '' });
  } else if (sections.length > 0) {
    sections[sections.length - 1].body = block;
  }
}

const links: Record<string, string> = {
  'About Me': '/resume',
  'Radio Index': 'https://radioindex.org',
  'Writing': 'https://dev.to/mike-vincent/series/31181',
  'Portfolio': 'https://mikevincent.dev',
  'GitHub': 'https://github.com/mike-vincent',
};
---

<Base title="Mike Vincent" description="Mike Vincent - Software Engineer">
  <div class="home">
    {sections.map(s => (
      <a class="tile" href={links[s.heading] || '#'}>
        <div class="tile-heading">{s.heading}</div>
        <div class="tile-body">{s.body}</div>
      </a>
    ))}
  </div>
</Base>

<style>
  .home {
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 0 -11px;
  }
  .tile {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 11px;
    transition: background 0.15s, border-color 0.15s;
    text-decoration: none;
    cursor: pointer;
    border-bottom: 1px solid rgba(128,128,128,0.2);
  }
  :global(.theme-dark) .tile:hover { background: rgba(255,255,255,0.04); border-bottom-color: #007AFF; }
  :global(.theme-light) .tile:hover { background: rgba(0,0,0,0.03); border-bottom-color: #007AFF; }
  .tile-heading {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
  }
  .tile-body {
    font-size: 14px;
    font-weight: 400;
    line-height: 1.5;
  }
  :global(.theme-dark) .tile-heading { color: #fff; }
  :global(.theme-light) .tile-heading { color: #000; }
  :global(.theme-dark) .tile-body { color: rgba(255,255,255,0.6); }
  :global(.theme-light) .tile-body { color: rgba(0,0,0,0.5); }
</style>
