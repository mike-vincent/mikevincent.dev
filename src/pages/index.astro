---
import Base from '../layouts/Base.astro';
import { homeContent } from '../content/home';
---

<Base title="Mike Vincent" description="Founding and Staff platform engineer building production search, data, and model systems.">
  <section class="home-section hero-section">
    <h1>{homeContent.hero.headline}</h1>
    <p class="hero-subheadline">{homeContent.hero.subheadline}</p>
    <ul class="hero-highlights">
      {homeContent.hero.highlights.map((item) => (
        <li>
          {item.parts.map((part) => (
            part.href ? (
              <a class="hero-highlight-link" href={part.href} target="_blank" rel="noopener noreferrer">{part.text}</a>
            ) : (
              <span>{part.text}</span>
            )
          ))}
        </li>
      ))}
    </ul>
    <div class="hero-ctas">
      <a class="hero-cta primary" href={homeContent.hero.primaryCta.href}>{homeContent.hero.primaryCta.label}</a>
      <a class="hero-cta secondary" href={homeContent.hero.secondaryCta.href}>{homeContent.hero.secondaryCta.label}</a>
    </div>
  </section>

  <section class="home-section">
    <div class="brand-showcase">
      {homeContent.americanPrograms.map((brand) => (
        brand.href ? (
          <a class="brand-chip" href={brand.href} target="_blank" rel="noopener noreferrer">{brand.name}</a>
        ) : (
          <span class="brand-chip">{brand.name}</span>
        )
      ))}
    </div>
  </section>

  <section class="home-section">
    <h2>Current Projects</h2>
    <ul class="venture-list">
      {homeContent.ventureCards.map((card) => (
        <li class="venture-row">
          <a class="venture-main-link" href={card.href} target="_blank" rel="noopener noreferrer">
            {card.thumb && (
              <div class="venture-thumb venture-thumb--icon">
                <img
                  class="venture-thumb-image venture-thumb-image--icon"
                  src={card.thumb.src}
                  alt={card.thumb.alt}
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}
            <div class="venture-lines">
              <h3>{card.title}</h3>
              <p class="venture-subtitle">{card.subtitle}</p>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>

  <section class="home-section contact-section">
    <div class="contact-links">
      <a class="contact-link secondary" href={homeContent.contact.secondaryHref}>
        {homeContent.contact.secondaryLabel}
      </a>
      <a class="contact-link primary" href={homeContent.contact.primaryHref} target="_blank" rel="noopener noreferrer">
        {homeContent.contact.primaryLabel}
      </a>
    </div>
  </section>
</Base>

<style>
  .home-section {
    margin-left: -11px;
    margin-right: -11px;
    padding: 16px 11px;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
  }
  .home-section:first-child {
    border-top: none;
    padding-top: 8px;
  }

  .home-section h2 {
    margin: 0 0 8px;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    text-transform: uppercase;
    letter-spacing: 0.45px;
  }
  :global(.theme-dark) .home-section h2 { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .home-section h2 { color: var(--mv-text-light-secondary); }

  .brand-showcase {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  .brand-chip {
    display: inline-flex;
    align-items: center;
    min-height: 30px;
    padding: 0 10px;
    border-radius: 999px;
    border: 1px solid rgba(128, 128, 128, 0.3);
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    text-decoration: none;
  }
  .brand-chip:hover {
    text-decoration: none;
  }
  :global(.theme-dark) .brand-chip { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .brand-chip { color: var(--mv-text-light-secondary); }
  :global(.theme-dark) .brand-chip:hover { background: rgba(255, 255, 255, 0.05); }
  :global(.theme-light) .brand-chip:hover { background: rgba(0, 0, 0, 0.03); }

  .hero-section h1 {
    margin: 0;
    font-size: var(--mv-size-large);
    line-height: 1.1;
    font-weight: var(--mv-weight-strong);
    letter-spacing: -0.01em;
    max-width: 850px;
  }
  :global(.theme-dark) .hero-section h1 { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .hero-section h1 { color: var(--mv-text-light-primary); }

  .hero-subheadline {
    margin: 10px 0 0;
    max-width: 760px;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.45;
  }
  :global(.theme-dark) .hero-subheadline { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .hero-subheadline { color: var(--mv-text-light-secondary); }

  .hero-highlights {
    list-style: disc;
    margin: 12px 0 16px;
    padding: 0 0 0 18px;
    display: grid;
    gap: 6px;
    max-width: 820px;
  }
  .hero-highlights li {
    margin: 0;
    padding-left: 0;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.45;
    border-left: none;
  }
  :global(.theme-dark) .hero-highlights li { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .hero-highlights li { color: var(--mv-text-light-secondary); }
  .hero-highlight-link {
    font-weight: var(--mv-weight-strong);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  :global(.theme-dark) .hero-highlight-link { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .hero-highlight-link { color: var(--mv-text-light-primary); }
  .hero-highlight-link:hover {
    text-decoration-thickness: 2px;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  .hero-cta,
  .contact-link {
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-strong);
    min-height: 38px;
    display: inline-flex;
    align-items: center;
    padding: 0 14px;
    border-radius: 999px;
    text-decoration: none;
  }
  .hero-cta:hover,
  .contact-link:hover {
    text-decoration: none;
  }
  .hero-cta.primary,
  .contact-link.primary {
    background: #007aff;
    color: var(--mv-text-dark-primary);
  }
  .hero-cta.secondary,
  .contact-link.secondary {
    border: 1px solid rgba(128, 128, 128, 0.35);
  }
  :global(.theme-dark) .hero-cta.secondary,
  :global(.theme-dark) .contact-link.secondary { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .hero-cta.secondary,
  :global(.theme-light) .contact-link.secondary { color: var(--mv-text-light-primary); }

  .venture-list {
    list-style: none;
    margin: 8px 0 0;
    padding: 0;
    display: grid;
    gap: 0;
  }

  .venture-row {
    margin: 0;
    list-style: none;
    border-top: 1px solid rgba(128, 128, 128, 0.2);
  }
  .venture-row::marker {
    content: '';
  }
  .venture-row:first-child {
    border-top: none;
  }

  .venture-main-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0;
    text-decoration: none;
  }
  .venture-main-link:hover {
    text-decoration: none;
  }

  .venture-thumb {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    overflow: hidden;
    flex: 0 0 auto;
  }
  .venture-thumb img {
    display: block;
    max-width: 100%;
    height: auto;
  }
  .venture-thumb--icon {
    width: 36px;
    height: 36px;
    border-radius: 999px;
  }
  .venture-thumb-image--icon {
    width: 36px !important;
    height: 36px !important;
    max-width: 36px !important;
    border-radius: 999px;
  }

  .venture-lines {
    min-width: 0;
    display: grid;
    gap: 1px;
  }

  .venture-subtitle {
    margin: 0;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.3;
    letter-spacing: 0;
  }
  :global(.theme-dark) .venture-subtitle { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .venture-subtitle { color: var(--mv-text-light-secondary); }

  .venture-lines h3 {
    margin: 0;
    font-size: var(--mv-size-regular);
    line-height: 1.3;
    font-weight: var(--mv-weight-strong);
  }
  :global(.theme-dark) .venture-lines h3 { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .venture-lines h3 { color: var(--mv-text-light-primary); }

  .contact-section {
    padding-bottom: 16px;
  }
  .contact-links {
    display: grid;
    gap: 8px;
    margin-top: 8px;
  }
  .contact-link {
    width: 100%;
    justify-content: center;
  }

</style>
