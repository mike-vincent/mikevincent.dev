---
import Base from '../layouts/Base.astro';
---

<Base title="Mike Vincent" description="Mike Vincent - Software Engineer">
  <div class="home">
    <div class="hero">
      <p class="tagline">Software engineer. Payments, banking, and infrastructure.</p>
      <p class="sub">Los Angeles. Currently at <strong>PwC</strong>.</p>
    </div>
    <div class="links">
      <a href="/resume">Resume</a>
      <a href="/projects">Projects</a>
      <a href="https://www.linkedin.com/in/michael-thomas-vincent/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      <a href="https://github.com/mike-vincent" target="_blank" rel="noopener noreferrer">GitHub</a>
    </div>
  </div>
</Base>

<style>
  .home {
    padding: 16px 0;
  }
  .hero {
    margin-bottom: 16px;
  }
  .tagline {
    font-size: 22px;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 12px;
    letter-spacing: -0.01em;
  }
  :global(.theme-dark) .tagline { color: #fff; }
  :global(.theme-light) .tagline { color: #000; }
  .sub {
    font-size: 15px;
    line-height: 1.5;
    margin: 0;
  }
  .sub strong { font-weight: 600; }
  :global(.theme-dark) .sub { color: rgba(255, 255, 255, 0.5); }
  :global(.theme-light) .sub { color: rgba(0, 0, 0, 0.45); }
  .links {
    display: flex;
    gap: 24px;
  }
  .links a {
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
  }
  .links a { color: #007AFF; }
  .links a:hover { text-decoration: underline; }
</style>
