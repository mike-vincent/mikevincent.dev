---
import Base from '../layouts/Base.astro';

const res = await fetch('https://raw.githubusercontent.com/mike-vincent/mike-vincent/main/README.md');
const md = await res.text();

// Parse markdown to HTML
let html = md
  .replace(/^# .+\n+/, '')
  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2">$1</a>')
  .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
  .replace(/\n\n+/g, '\n\n')
  .split('\n\n')
  .map(block => {
    block = block.trim();
    if (!block) return '';
    return '<p>' + block + '</p>';
  })
  .join('\n');
---

<Base title="Mike Vincent" description="Mike Vincent - Software Engineer">
  <div class="home" set:html={html} />
</Base>

<style>
  .home {
    padding: 16px 0;
  }
  .home :global(p) {
    font-size: 16px;
    line-height: 1.5;
    margin: 0 0 12px;
  }
  .home :global(p:last-child) {
    margin-bottom: 0;
  }
  :global(.theme-dark) .home :global(p) { color: #fff; }
  :global(.theme-light) .home :global(p) { color: #000; }
  .home :global(strong) {
    font-weight: 600;
  }
  :global(.theme-dark) .home :global(strong) { color: #fff; }
  :global(.theme-light) .home :global(strong) { color: #000; }
  .home :global(a) {
    color: #007AFF;
    text-decoration: none;
  }
  .home :global(a:hover) { text-decoration: underline; }
</style>
