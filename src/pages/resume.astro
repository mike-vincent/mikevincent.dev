---
import Base from '../layouts/Base.astro';
---

<Base title="Resume - Mike Vincent" description="Resume of Mike Vincent - Software Engineer">
  <div class="section-content">
    <div class="row">
      <div class="column large-centered large-10 small-12">
        <div class="resume-wrapper">
          <div class="resume-actions">
            <a href="/resume.pdf" class="resume-btn" download>
              <span class="material-symbols-outlined">download</span>
              PDF
            </a>
            <button class="resume-btn" onclick="window.print()">
              <span class="material-symbols-outlined">print</span>
              Print
            </button>
          </div>
          <div class="resume-content" id="resume-content">
            <p>Loading...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>

<script is:inline>
  // Fetch and render resume from GitHub
  fetch('https://raw.githubusercontent.com/mike-vincent/mike-vincent/main/RESUME.md')
    .then(r => r.ok ? r.text() : Promise.reject('Not found'))
    .then(md => {
      let html = md
        .replace(/^# (.+)$/gm, '<h1>$1</h1>')
        .replace(/^## (.+)$/gm, '<h2>$1</h2>')
        .replace(/^### (.+)$/gm, '<h3>$1</h3>')
        .replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>')
        .replace(/\*([^*]+)\*/g, '<em>$1</em>')
        .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank" rel="noopener">$1</a>')
        .replace(/^- (.+)$/gm, '<li>$1</li>')
        .replace(/^(?!<[hl]|<li)(.+)$/gm, '<p>$1</p>');
      html = html.replace(/(<li>[\s\S]*?<\/li>\n?)+/g, '<ul>$&</ul>');
      document.getElementById('resume-content').innerHTML = html;
    })
    .catch(() => {
      document.getElementById('resume-content').innerHTML = '<p>Resume not found.</p>';
    });
</script>

<style>
  .resume-wrapper { position: relative; }

  .resume-actions {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .resume-btn {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    border: none;
    background: #007AFF;
    color: #fff;
  }
  .resume-btn:hover { background: #0066d6; }
  .resume-btn .material-symbols-outlined { font-size: 18px; }

  .resume-content :global(h1) {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 8px;
  }
  .resume-content :global(h2) {
    font-size: 24px;
    font-weight: 600;
    margin: 32px 0 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(128, 128, 128, 0.2);
  }
  .resume-content :global(h3) {
    font-size: 18px;
    font-weight: 600;
    margin: 24px 0 8px;
  }
  .resume-content :global(p) {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 16px;
  }
  .resume-content :global(ul) {
    margin: 0 0 16px;
    padding-left: 24px;
  }
  .resume-content :global(li) {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 8px;
  }
  .resume-content :global(a) {
    color: #007AFF;
    text-decoration: none;
  }
  .resume-content :global(a:hover) { text-decoration: underline; }

  @media (max-width: 500px) {
    .resume-actions {
      position: static;
      flex-direction: row;
      margin-bottom: 24px;
    }
  }
</style>
