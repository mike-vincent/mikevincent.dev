---
import type { CaseStudy } from '../content/case-studies';

interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<article class="case-study-page">
  <header class="case-study-header">
    <h1>{study.title}</h1>
    <p class="case-study-role">{study.roleLine}</p>
    <p class="case-study-result">{study.resultLine}</p>
    {study.brands.length > 0 && (
      <div class="case-study-brands">
        {study.brands.map((brand) => (
          brand.href ? (
            <a class="brand-chip" href={brand.href} target="_blank" rel="noopener noreferrer">{brand.name}</a>
          ) : (
            <span class="brand-chip">{brand.name}</span>
          )
        ))}
      </div>
    )}
  </header>

  <section class="case-study-story">
    {study.story.map((item) => (
      <article class="story-item">
        <h2 class="story-label">{item.step}</h2>
        <p class="story-text">{item.text}</p>
      </article>
    ))}
  </section>

  <nav class="case-study-nav">
    <a href="/past-projects/">Back to all past projects</a>
    <a href="/">Back to home</a>
  </nav>
</article>

<style>
  .case-study-page {
    margin-left: -11px;
    margin-right: -11px;
  }

  .case-study-header,
  .case-study-story,
  .case-study-nav {
    padding: 10px 11px;
  }

  .case-study-header {
    padding-top: 6px;
  }

  .case-study-header h1 {
    margin: 0;
    font-size: var(--mv-size-large);
    font-weight: var(--mv-weight-strong);
    line-height: 1.2;
  }
  :global(.theme-dark) .case-study-header h1 { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .case-study-header h1 { color: var(--mv-text-light-primary); }

  .case-study-role,
  .case-study-result {
    margin: 6px 0 0;
    font-size: var(--mv-size-regular);
    line-height: 1.45;
  }

  .case-study-role {
    font-weight: var(--mv-weight-regular);
  }
  :global(.theme-dark) .case-study-role { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .case-study-role { color: var(--mv-text-light-secondary); }

  .case-study-result {
    font-weight: var(--mv-weight-strong);
  }
  :global(.theme-dark) .case-study-result { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .case-study-result { color: var(--mv-text-light-primary); }

  .case-study-brands {
    margin-top: 8px;
    display: flex;
    flex-wrap: wrap;
    gap: 7px;
  }

  .brand-chip {
    display: inline-flex;
    align-items: center;
    min-height: 28px;
    padding: 0 9px;
    border-radius: 999px;
    border: 1px solid rgba(128, 128, 128, 0.3);
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    text-decoration: none;
  }
  .brand-chip:hover {
    text-decoration: none;
  }
  :global(.theme-dark) .brand-chip { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .brand-chip { color: var(--mv-text-light-secondary); }
  :global(.theme-dark) .brand-chip:hover { background: rgba(255, 255, 255, 0.05); }
  :global(.theme-light) .brand-chip:hover { background: rgba(0, 0, 0, 0.03); }

  .case-study-story {
    padding-top: 8px;
    padding-bottom: 4px;
  }

  .story-item {
    padding: 6px 0;
  }
  .story-item:first-child {
    padding-top: 0;
  }

  .story-label {
    margin: 0 0 2px;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-strong);
    line-height: 1.35;
  }
  :global(.theme-dark) .story-label { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .story-label { color: var(--mv-text-light-primary); }

  .story-text {
    margin: 0;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.45;
  }
  :global(.theme-dark) .story-text { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .story-text { color: var(--mv-text-light-secondary); }

  .case-study-nav {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    padding-top: 8px;
    padding-bottom: 10px;
  }
  .case-study-nav a {
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-strong);
    text-decoration: none;
  }
  .case-study-nav a:visited {
    color: inherit;
  }
  :global(.theme-dark) .case-study-nav a {
    color: var(--mv-text-dark-primary);
  }
  :global(.theme-light) .case-study-nav a {
    color: var(--mv-text-light-primary);
  }
  .case-study-nav a:hover {
    text-decoration: none;
  }
</style>
