---
import type { CaseStudy } from '../content/case-studies';

interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<article class="case-study-page">
  <header class="case-study-header">
    <p class="case-study-kicker">{study.subtitle}</p>
    <h1>{study.title}</h1>
    <p class="case-study-summary">{study.summary}</p>
    {study.brands.length > 0 && (
      <div class="case-study-brands">
        <p class="brands-label">BRANDS</p>
        <div class="brands-wrap">
          {study.brands.map((brand) => (
            brand.href ? (
              <a class="brand-chip" href={brand.href} target="_blank" rel="noopener noreferrer">{brand.name}</a>
            ) : (
              <span class="brand-chip">{brand.name}</span>
            )
          ))}
        </div>
      </div>
    )}
    <p class="public-safe-note">{study.publicSafeNote}</p>
  </header>

  <section class="case-study-section">
    <h2>Background</h2>
    <p>{study.context}</p>
  </section>

  <section class="case-study-section">
    <h2>Limits</h2>
    <ul>
      {study.constraints.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="case-study-section">
    <h2>Work</h2>
    <ul>
      {study.ownership.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="case-study-section">
    <h2>Build Notes</h2>
    <ul>
      {study.architectureNotes.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="case-study-section">
    <h2>What Changed</h2>
    <ul>
      {study.outcome.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="case-study-section">
    <h2>Risk Checks</h2>
    <ul>
      {study.riskControls.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <nav class="case-study-nav">
    <a href="/case-studies/">Back to Case Studies</a>
    <a href="/">Back to Home</a>
  </nav>
</article>

<style>
  .case-study-page {
    margin-left: -11px;
    margin-right: -11px;
  }
  .case-study-header,
  .case-study-section,
  .case-study-nav {
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    padding: 16px 11px;
  }
  .case-study-header {
    border-top: none;
    padding-top: 10px;
  }
  .case-study-kicker {
    margin: 0 0 8px;
    text-transform: uppercase;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    letter-spacing: 0.4px;
  }
  :global(.theme-dark) .case-study-kicker { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .case-study-kicker { color: var(--mv-text-light-secondary); }
  .case-study-header h1 {
    margin: 0;
    font-size: var(--mv-size-large);
    font-weight: var(--mv-weight-strong);
    line-height: 1.2;
  }
  :global(.theme-dark) .case-study-header h1 { color: var(--mv-text-dark-primary); }
  :global(.theme-light) .case-study-header h1 { color: var(--mv-text-light-primary); }
  .case-study-summary {
    margin: 10px 0 0;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.5;
  }
  :global(.theme-dark) .case-study-summary { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .case-study-summary { color: var(--mv-text-light-secondary); }
  .public-safe-note {
    margin: 12px 0 0;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.5;
  }
  :global(.theme-dark) .public-safe-note { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .public-safe-note { color: var(--mv-text-light-secondary); }
  .case-study-brands {
    margin-top: 12px;
    border: 1px solid rgba(128, 128, 128, 0.25);
    border-radius: 10px;
    padding: 10px;
  }
  .brands-label {
    margin: 0 0 8px;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    letter-spacing: 0.35px;
    text-transform: uppercase;
  }
  :global(.theme-dark) .brands-label { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .brands-label { color: var(--mv-text-light-secondary); }
  .brands-wrap {
    display: flex;
    flex-wrap: wrap;
    gap: 7px;
  }
  .brand-chip {
    display: inline-flex;
    align-items: center;
    min-height: 28px;
    padding: 0 9px;
    border-radius: 999px;
    border: 1px solid rgba(128, 128, 128, 0.3);
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    text-decoration: none;
  }
  .brand-chip:hover {
    text-decoration: none;
  }
  :global(.theme-dark) .brand-chip { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .brand-chip { color: var(--mv-text-light-secondary); }
  :global(.theme-dark) .brand-chip:hover { background: rgba(255, 255, 255, 0.05); }
  :global(.theme-light) .brand-chip:hover { background: rgba(0, 0, 0, 0.03); }

  .case-study-section h2 {
    margin: 0 0 10px;
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-strong);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  :global(.theme-dark) .case-study-section h2 { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .case-study-section h2 { color: var(--mv-text-light-secondary); }
  .case-study-section p,
  .case-study-section li {
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-regular);
    line-height: 1.55;
  }
  :global(.theme-dark) .case-study-section p,
  :global(.theme-dark) .case-study-section li { color: var(--mv-text-dark-secondary); }
  :global(.theme-light) .case-study-section p,
  :global(.theme-light) .case-study-section li { color: var(--mv-text-light-secondary); }
  .case-study-section p {
    margin: 0;
  }
  .case-study-section ul {
    margin: 0;
    padding-left: 20px;
  }
  .case-study-section li {
    margin-bottom: 6px;
  }

  .case-study-nav {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    padding-bottom: 22px;
  }
  .case-study-nav a {
    font-size: var(--mv-size-regular);
    font-weight: var(--mv-weight-strong);
  }
</style>
